<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp"
    tools:context=".socialdevelopment.SocialDevelopmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/education_sector_social_development"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/social_form_description"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/social_date_text_view"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="23 - October 2020"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/financial_year_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/financial_year_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/village_text_edit"
            android:text="@string/village_label"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/village_hint"
            android:id="@+id/village_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:labelFor="@id/parish_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parish_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/parish_hint"
            android:id="@+id/parish_text_edit"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:inputType="text"
            android:textSize="15sp"
            tools:ignore="LabelFor" />

        <TextView
            android:labelFor="@id/division_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/division_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/division_hint"
            android:id="@+id/division_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:overScrollMode="always"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/ygb_agent_name_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginVertical="10dp"
            android:hint="@string/fullname_hint"
            android:inputType="text"
            android:textSize="15sp"
            android:id="@+id/ygb_agent_name_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ygb_agent_tel_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:layout_marginVertical="10dp"
            android:inputType="phone"
            android:hint="@string/telephone_hint"
            android:id="@+id/ygb_agent_tel_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_question_2_text"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="3">

<!--                row 0 -->
                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grants_label"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_amount_expected_label"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_amount_received"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="3"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_date_received"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="4"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_date_withdrawn"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

<!--                row 1 -->
                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="@string/social_com_mobilization"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/community_expected_amount_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="number"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/community_received_amount_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="number"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/community_date_received_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="date"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/community_date_withdrawn_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="date"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

<!--                row 2 -->
                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/social_other"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/other_expected_amount_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="number"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/other_received_amount_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="number"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/other_date_received_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="date"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
                <EditText
                    android:enabled="false"
                    android:layout_marginHorizontal="10dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/other_date_withdrawn_edit_text"
                    android:layout_width="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:autofillHints=""
                    android:inputType="date"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </GridLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>