<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp"
    android:background="@color/colorActivityBackground"
    android:layout_height="match_parent"
    tools:context=".water_and_environment.WaterEnvironmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/water_env_sector_header"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/water_env_form_description"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/water_date_text_view"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/financial_year_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/water_financial_year_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            tools:ignore="RtlSymmetry" />

<!--        district -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/district_label"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:layout_marginVertical="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/village_hint"
            android:id="@+id/water_district_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="LabelFor" />

<!--        village -->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/village_text_edit"
            android:text="@string/village_label"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:layout_marginVertical="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/village_hint"
            android:id="@+id/water_village_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="LabelFor" />

<!--        parish -->
        <TextView
            android:labelFor="@id/parish_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parish_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginVertical="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/parish_hint"
            android:id="@+id/water_parish_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:inputType="text"
            android:textSize="15sp"
            tools:ignore="LabelFor" />
<!--        division -->

        <TextView
            android:labelFor="@id/division_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/division_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginVertical="10dp"
            android:hint="@string/division_hint"
            android:id="@+id/water_division_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:overScrollMode="always"
            android:inputType="text"
            tools:ignore="LabelFor" />

<!--        agent Name -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/ygb_agent_name_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="@string/fullname_hint"
            android:inputType="text"
            android:textSize="15sp"
            android:id="@+id/ygb_agent_name_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginVertical="10dp"
            android:autofillHints="" />

<!--        agent tel number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ygb_agent_tel_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginVertical="10dp"
            android:inputType="phone"
            android:hint="@string/telephone_hint"
            android:id="@+id/ygb_agent_tel_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

<!--        agent number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ygb_agent_no_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginVertical="10dp"
            android:hint="@string/agent_number_hint"
            android:id="@+id/ygb_agent_no_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:textSize="15sp"
            android:paddingEnd="5dp" />

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_tool_note"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_question_1_text"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/water_question_1_radio_group">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/yes"
                android:id="@+id/water_question_1_yes"/>

            <RadioButton
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/no"
                android:id="@+id/water_question_1_no"/>
        </RadioGroup>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_question_1_if_text"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:gravity="start"
            android:layout_marginVertical="5dp"
            android:id="@+id/water_question_1_if_no"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_style"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_question_2_text"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:gravity="start"
            android:layout_marginVertical="5dp"
            android:id="@+id/water_question_2_edit_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_style"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_question_3_text"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/water_question_3_radio_group">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/yes"
                android:id="@+id/water_question_3_yes"/>

            <RadioButton
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/no"
                android:id="@+id/water_question_3_no"/>
        </RadioGroup>
    </LinearLayout>

</ScrollView>