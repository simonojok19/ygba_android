<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp"
    android:background="@color/colorActivityBackground"
    tools:context=".education.EducationActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/education_sector_header"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/agriculture_form_description"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/education_date_text_view"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="23 - October 2020"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/financial_year_label"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/financial_year_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/district_label"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/village_hint"
            android:id="@+id/district_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/village_text_edit"
            android:text="@string/village_label"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/village_hint"
            android:id="@+id/village_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:labelFor="@id/parish_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parish_label"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/parish_hint"
            android:id="@+id/parish_text_edit"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:inputType="text"
            android:textSize="15sp"
            tools:ignore="LabelFor" />

        <TextView
            android:labelFor="@id/division_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/division_label"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <EditText
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/division_hint"
            android:id="@+id/division_text_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:autofillHints=""
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:overScrollMode="always"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/ygb_agent_name_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginVertical="10dp"
            android:hint="@string/fullname_hint"
            android:inputType="text"
            android:textSize="15sp"
            android:id="@+id/ygb_agent_name_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ygb_agent_tel_label"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:layout_marginVertical="10dp"
            android:inputType="phone"
            android:hint="@string/telephone_hint"
            android:id="@+id/ygb_agent_tel_edit_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/education_question_1_note"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/education_question_1_upe"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <EditText
            android:layout_marginVertical="10dp"
            android:inputType="text"
            android:hint="@string/school_name_hint"
            android:id="@+id/question_1_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_education_introduction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:columnCount="7"
                android:rowCount="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

<!--                row 0 -->
                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_name_education_question_2"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnSpan="5"
                    android:layout_marginVertical="5dp"
                    android:inputType="text"
                    android:id="@+id/question_2_school_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

<!--                row 1 -->
                <TextView
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

<!--                row 2 -->

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male_caps"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male_pwds"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="2"
                    android:layout_column="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female_pwds"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="2"
                    android:layout_column="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

<!--                row 3 -->
                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_teachers"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_marginVertical="5dp"
                    android:inputType="number"
                    android:id="@+id/question_2_teachers_male"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:layout_marginVertical="5dp"
                    android:inputType="number"
                    android:id="@+id/question_2_teachers_female"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:layout_marginVertical="5dp"
                    android:inputType="number"
                    android:id="@+id/question_2_teachers_male_pwd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="3"
                    android:layout_column="5"
                    android:layout_marginVertical="5dp"
                    android:inputType="number"
                    android:id="@+id/question_2_teachers_female_pwd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:layout_marginHorizontal="5dp"
                    android:layout_row="3"
                    android:layout_column="6"
                    android:layout_marginVertical="5dp"
                    android:inputType="number"
                    android:id="@+id/question_2_teachers_total"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />


            </GridLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/saved_form_data"
            card_view:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="27dp"
            card_view:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="Save"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>